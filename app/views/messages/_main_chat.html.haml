.main-chat
  .main-chat__group-info
    .main-chat__group-info__karioki
      .main-chat__group-info__karioki__test
        = @group.name
      .main-chat__group-info__karioki__member
        Member:
        .main-chat__group-info__karioki__member-name
          - @group.users.each do|user|
            = user.name
  
    .main-chat__group-info__edit-botton_chalacter
      = link_to edit_group_path(@group) do
        Edit
  .main-chat__list
    = render @messages
  .main-chat__message-form
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__input
        = f.text_field :content, class: 'Form__input__inputContent', placeholder: 'type a message'
        = f.label :image, class: 'Form__input__inputImage' do
          = icon('far', 'image', class: 'Form__input__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'Form__submit'

